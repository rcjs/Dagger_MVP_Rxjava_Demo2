<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="MyToolbar" parent="Base.Widget.AppCompat.Toolbar">
        <!--Toolbar标题颜色-->
        <item name="titleTextColor">?attr/toolbar_Text_Color</item>
        <!--ActionBar默认按钮的颜色-->
        <item name="colorControlNormal">?attr/toolbar_Text_Color</item>
        <!--弹出菜单的样式-->
        <item name="popupTheme">@style/MyToolbarPopupTheme</item>
        <!--子控件相对父控件位置-->
        <item name="android:gravity">center</item>
        <!--NavigationButton-->
        <item name="toolbarNavigationButtonStyle">@style/Widget.AppCompat.Toolbar.Button.Navigation</item>

    </style>
    <style name="MyToolbarPopupTheme" parent="ThemeOverlay.AppCompat.Light">
        <!--Menu文字颜色-->
        <item name="android:textColorPrimary">?attr/toolbar_Menu_Text_Color</item>
        <!--子控件相对父控件位置-->
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="CollapsingToolbarTitleStyle.About" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/transparent</item>
    </style>
</resources>
